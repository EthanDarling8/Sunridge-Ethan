@page
@model Sunridge.Pages.Admin.CommonAreaAssets.MaintenanceRecords.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Maintenance Records for @Model.Asset.Name</h1>

<a asp-page="Upsert"  asp-route-assetId="@Model.Asset.Id" class="btn btn-primary mb-3"><i class="fas fa-plus"></i> Create New</a>

<div class="row">
    <div class="col-lg-9">
        <table id="DT_load" class="table table-striped table-hover dt-responsive display nowrap">
            <thead>
                <tr>
                    <th>
                        Date completed
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Cost
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/maintenance-records.js"></script>
}