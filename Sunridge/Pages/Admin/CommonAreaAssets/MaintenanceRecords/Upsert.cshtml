@page
@model Sunridge.Pages.Admin.CommonAreaAssets.MaintenanceRecords.UpsertModel
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-9">
        <form method="post">
            <div class="form-group">
                <label asp-for="MaintenanceRecord.DateCompleted"></label>
                <input class="form-control" asp-for="MaintenanceRecord.DateCompleted" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span class="text-danger" asp-validation-for="MaintenanceRecord.DateCompleted"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceRecord.Description"></label>
                <input class="form-control" asp-for="MaintenanceRecord.Description" />
                <span class="text-danger" asp-validation-for="MaintenanceRecord.Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceRecord.Cost"></label>
                <input class="form-control" asp-for="MaintenanceRecord.Cost" />
                <span class="text-danger" asp-validation-for="MaintenanceRecord.Cost"></span>
            </div>
            @if (Model.MaintenanceRecord.Id != 0)
            {
                <input type="hidden" asp-for="MaintenanceRecord.Id" />
                <input asp-for="MaintenanceRecord.AssetId" hidden />
                <button type="submit" class="btn btn-primary">Update</button>
            }
            else
            {
                <input asp-for="MaintenanceRecord.AssetId" value="@Request.Query["assetId"]" hidden />
                <button type="submit" class="btn btn-primary">Add</button>
            }
        </form>
    </div>
</div>