@page
@model Sunridge.Pages.Admin.Document.Category.IndexModel
@{
    ViewData["Title"] = "Document Categories";
}




<h1 class="row pl-3">Document Category</h1>

@*Create New Button*@
<div class="container">
    <div class="row">
        <div class="col-12 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
</div>

@*id is required for datatables*@
<table id="DT_load" class="table table-striped table-bordered">
    <thead>
        <tr>
            @*The headers have to be hard coded in datatables*@
            <th>
                Document Category Name
            </th>
            <th>
                @*Edit and delete buttons will go under here*@
            </th>
        </tr>
    </thead>
</table>

@*This section optionally is rendered in _Layout.html*@
@section Scripts{
    <script src="~/js/documentCategory.js"></script>
}