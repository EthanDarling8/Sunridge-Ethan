@page
@model Sunridge.Pages.Admin.Event.IndexModel
@{
    ViewData["Title"] = "Event";
}


<h1 class="row pl-3">Event</h1>
<p class="row  pl-3">Used for adding an event to the Events Calendar.</p>

@*Create New Button*@
<div class="container">
    <div class="row">
        <div class="col-12 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
</div>

@*id is required for datatables*@
<table id="DT_load" class="table table-striped table-bordered">
    <thead>
        <tr>
            @*The headers have to be hard coded in datatables*@
            <th>
                Title
            </th>
            <th>
                Location
            </th>
            <th>
                Start
            </th>
            <th>
                End
            </th>
            <th>
                All Day
            </th>
            <th>
                @*Edit and delete buttons will go under here*@
            </th>
        </tr>
    </thead>
</table>


@section Scripts{
    <script src="~/js/event.js"></script>
}