@page
@model Sunridge.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Create and issue a new key</h1>

<div class="row">
    <div class="col-lg-3">
        <form method="post">
            <input asp-for="KeyLot.LotId" value="@Request.Query["id"]" hidden />
            <div class="form-group">
                <label asp-for="Key.Year"></label>
                <input class="form-control" asp-for="Key.Year" />
                <span class="text-danger" asp-validation-for="Key.Year"></span>
            </div>
            <div class="form-group">
                <label asp-for="Key.SerialNumber"></label>
                <input class="form-control" asp-for="Key.SerialNumber" />
                <span class="text-danger" asp-validation-for="Key.SerialNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="KeyLot.PaidAmount"></label>
                <input class="form-control" asp-for="KeyLot.PaidAmount" />
                <span class="text-danger" asp-validation-for="KeyLot.PaidAmount"></span>
            </div>
            <p class="text-danger">@Html.ValidationMessage("DuplicateKey")</p>
            <button class="btn btn-primary" type="submit">Create and Issue</button>
        </form>
    </div>
</div>
