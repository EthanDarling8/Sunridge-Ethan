@page
@model Sunridge.Pages.Admin.Lot.Inventory.Upsert

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="col-12 px-3 border-bottom-1 mt-3">
                <h2 class="text-primary">@(Model.InventoryObj.Id != 0 ? "Update" : "Create") Lot Inventory Item </h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        @if (Model.InventoryObj.Id != 0)
                        {
                            <input type="hidden" asp-for="InventoryObj.Id" />
                        }
                        <label asp-for="InventoryObj.ItemName"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="InventoryObj.ItemName" />
                        <span class="text-danger" asp-validation-for="InventoryObj.ItemName"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (Model.InventoryObj.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-secondary form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
