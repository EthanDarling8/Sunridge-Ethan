@page
@using Sunridge.Utility
@model Sunridge.Pages.Home.BoardMembers.Index

@{
    ViewData["Title"] = "Board Members";
}

<h1>Board Members</h1>

<div class="container">
    <div class="row">
        @if (User.IsInRole(SD.AdministratorRole)) {
            //TODO
            @*<a asp-page="Upsert" class="btn btn-primary mt-4 mb-3"><i class="fas fa-plus"></i>&nbsp;Add Board Member</a>*@
        }
        @foreach (var owner in Model.OwnerList) {
            @foreach (var bm in Model.BoardMemberList) {
                @if (owner.Id == bm.Owner.Id) {
                    <div class="col-lg-6">
                        <div class="card mb-3 shadow" style="max-width: 540px;">
                            <div class="row no-gutters">
                                <div class="col-lg-4">
                                    <img src="@bm.Image" class="card-img" height="200px" alt="@owner.FirstName"
                                         style="width: 150px; height: 150px; object-fit: cover">
                                </div>
                                <div class="col-lg-8">
                                    <div class="card-body">
                                        <h3 class="card-title">@owner.FullName</h3>
                                        <h6>@bm.Position - Lot Here</h6>
                                        <h6>
                                            <a href="mailto:@owner.Email" target="_blank">@owner.Email</a>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>