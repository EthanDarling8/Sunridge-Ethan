@page
@model Sunridge.Pages.Home.FireInfo.Upsert

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="col-12 px-3 border-bottom-1 mt-3">
                <h2 class="text-primary">@(Model.FireInfoObj.Id != 0 ? "Update" : "Create") Fire Info</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FireInfoObj.Title"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="FireInfoObj.Title"/>
                        <span class="text-danger" asp-validation-for="FireInfoObj.Title"></span>
                    </div>
                    @if (Model.FireInfoObj.Id != 0) {
                        <input type="hidden" asp-for="FireInfoObj.Id"/>
                    }
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FireInfoObj.Description"></label>
                    </div>
                    <div class="col-9">
                        <textarea class="form-control" asp-for="FireInfoObj.Description" id="txtDesc" style="height: 200px"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FireInfoObj.File"></label>
                    </div>
                    <div class="col-9">
                        <input type="file" class="form-control" id="uploadBox" name="files" accept=".pdf,.docx"/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FireInfoObj.Link1"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="FireInfoObj.Link1"/>
                        <span class="text-danger" asp-validation-for="FireInfoObj.Link1"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FireInfoObj.Link2"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="FireInfoObj.Link2"/>
                        <span class="text-danger" asp-validation-for="FireInfoObj.Link2"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FireInfoObj.Phone"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="FireInfoObj.Phone"/>
                        <span class="text-danger" asp-validation-for="FireInfoObj.Phone"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FireInfoObj.Email"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="FireInfoObj.Email"/>
                        <span class="text-danger" asp-validation-for="FireInfoObj.Email"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (Model.FireInfoObj.Id != 0) {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else {
                                    <button type="submit" class="btn btn-primary form-control" onclick="return ValidateInput()">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    
        function ValidateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal('Error', 'Please Select an Image', 'error');
                return false;
            }
            return true;
        }
    </script>
}