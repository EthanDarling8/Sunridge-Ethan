@model Sunridge.Pages.Home.Photos.IndexModel

<div class="col-xl-4 col-md-6">

    @*Category Selected*@
    @if (@Model.PhotoVM.SelectedPhotoCategory != null)
    {
        <a asp-page="Index"
            asp-route-PhotoCategoryId="@Model.PhotoVM.SelectedPhotoCategory.Id"
            asp-route-PhotoAlbumId="@Model.PhotoAlbum.Id"
            class="card" style="border:2px solid #008cba; border-radius: 5px; ">

            @*Title*@
            <div class="pl-3 pt-1 text-center">
                <h3 class="card-title text-primary"><b>@Model.PhotoAlbum.Title</b></h3>
            </div>


            @*Display an image if there is one*@
            @if (Model.PhotoAlbum.Thumb != null)
            {
                <img src="@Model.PhotoAlbum.Thumb" class="card-img-top p-2 rounded" />
            }
            else
            {
                <img src="" class="card-img-top p-2 rounded" />
            }


            @* **** ToDo **** Display Album Owner's Name *@

        </a>
    }

    @*No Category Selected*@
    else
    {
    <a asp-page="Index"
        asp-route-PhotoAlbumId="@Model.PhotoAlbum.Id"
        class="card" style="border:2px solid #008cba; border-radius: 5px; ">

        @*Title*@
        <div class="pl-3 pt-1 text-center">
            <h3 class="card-title text-primary"><b>@Model.PhotoAlbum.Title</b></h3>
        </div>


        @*Display an image if there is one*@
        @if (Model.PhotoAlbum.Thumb != null)
        {
            <img src="@Model.PhotoAlbum.Thumb" class="card-img-top p-2 rounded" />
        }
        else
        {
            <img src="" class="card-img-top p-2 rounded" />
        }


        @* **** ToDo **** Display Album Owner's Name *@

    </a>
    }
</div>


