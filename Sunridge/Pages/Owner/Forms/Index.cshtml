@page
@model Sunridge.Pages.Owner.Forms.IndexModel
@{
}

<h2 class="mb-4">Sunridge Submitted Forms</h2>

<div class="table-responsive-sm">
    <table class="table table-responsive-sm table-hover">
        <thead>
            <tr>
                <th id="newsDate">
                    DisplayDate
                </th>
                <th id="newsHeader">
                    Header
                </th>
                <th id="newsArchived">
                    Archived
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @if (Model.FormsResolvedList.Count > 0)
            {
                @foreach (var item in Model.FormsResolvedList)
                {
                    <tr>
                        <td style="width: 25%">
                            @item.FormType
                        </td>
                        <td style="width: 50%">
                            @item.OwnerId
                        </td>
                        <td>
                            @item.DateCreated
                        </td>
                        <td>
                            @item.DateResolved
                        </td>
                        <td>
                            @item.AdminId
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-info btn-sm" asp-page="/Owner/Forms/Upsert" asp-route-id="@item.Id">
                                    <span class="d-none d-lg-block">View</span>
                                    <i class="fas fa-edit d-lg-none"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td style="width: 100%">
                    No unresolved forms right now!
                    </td>
                </tr>
            }
</tbody>

        <tbody>
            @if (Model.FormsResolvedList.Count > 0)
            {
                @foreach (var item in Model.FormsResolvedList)
                {
                    <tr>
                        <td style="width: 25%">
                            @item.FormType
                        </td>
                        <td style="width: 50%">
                            @item.OwnerId
                        </td>
                        <td>
                            @item.DateCreated
                        </td>
                        <td>
                            @item.DateResolved
                        </td>
                        <td>
                            @item.AdminId
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-info btn-sm" asp-page="/Owner/Forms/Upsert" asp-route-id="@item.Id">
                                    <span class="d-none d-lg-block">View</span>
                                    <i class="fas fa-edit d-lg-none"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td style="width: 100%">
                        No resolved forms entered!
                    </td>
                </tr>
            }
        </tbody>



    </table>
</div>