@using Microsoft.AspNetCore.Identity
@using Sunridge.Models

@inject SignInManager<Owner> SignInManager
@inject UserManager<Owner> UserManager

<ul class="nav navbar-nav navbar-right login">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span class="small d-none d-md-inline d-lg-inline">Hello @UserManager.GetUserName(User)!</span>
        <a id="manage" class="btn btn-link navbar-btn navbar-link" asp-area="Identity" asp-page="/Owner/OwnerPortal/Dashboard" title="Manage">Dashboard</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="navbar-right" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
        </form>
    </li>

}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
